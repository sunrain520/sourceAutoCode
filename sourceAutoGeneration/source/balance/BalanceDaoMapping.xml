<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!-- 需要手动修改Dao路径 -->
<mapper namespace="BalanceDao">

	<!-- 需要手动修改实体路径 -->
	<resultMap id="ResultMap"
		type="Balance">
		<result column="appid" property="appid" />
		<result column="moduleid" property="moduleid" />
		<result column="usecount" property="usecount" />
		<result column="cachecount" property="cachecount" />
		<result column="useflag" property="useflag" />
		<result column="modifytime" property="modifytime" />
		<result column="inserttime" property="inserttime" />
	</resultMap>

	<sql id="Base_Column_List">
	appid,moduleid,usecount,cachecount,useflag,modifytime,inserttime,
	</sql>

	<select id="idIsExist" parameterType="String"
		resultType="Integer" >
		SELECT COUNT(0) FROM am_balance WHERE
		f_apply_id = 1
	</select>

	<insert id="addBalance" parameterType="java.util.Map" >
		INSERT INTO am_balance SET
		<if test="aplid != null">
			aplid = 1,
		</if>
		update_time = NOW()
	</insert>

	<update id="updateBalance" parameterType="java.util.Map">
		UPDATE
		am_balance SET
		apl_id = 1,
		update_time = NOW()
		WHERE
		aplid = 1
	</update>

	<select id="queryBalance" parameterType="java.util.Map" resultType="java.util.Map" >
		SELECT * FROM am_balance 
	</select>
</mapper>
